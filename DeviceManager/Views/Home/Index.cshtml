@model DeviceManager.Models.Dashboard

<div class="container py-5">

    <h2 class="mb-4">Dashboard</h2>

    <!-- Top Metrics Cards -->
    <div class="row g-3 mb-5">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5>Total Devices</h5>
                    <h3>@Model.TotalDevices</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5>Active Devices</h5>
                    <h3>@Model.ActiveDevices</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5>Inactive Devices</h5>
                    <h3>@Model.InactiveDevices</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Recently Added Devices -->
    <div class="mb-5">
        <h4>Recently Added Devices</h4>
        <table class="table table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model.RecentlyAdded)
                {
                    <tr>
                        <td>@device.Name</td>
                        <td>@device.Type</td>
                        <td>@device.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Devices Needing Attention -->
    <div class="mb-5">
        <h4>Devices Needing Attention</h4>
        <table class="table table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Technician</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model.AttentionNeeded)
                {
                    <tr>
                        <td>@device.Name</td>
                        <td>@device.Type</td>
                        <td>@device.Status</td>
                        <td>@(device.Technician?.FullName ?? "Unassigned")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Technician Workload -->
    <div class="mb-5">
        <h4>Technician Workload</h4>
        <table class="table table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Technician</th>
                    <th>Assigned Devices</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tech in Model.TechnicianWorkload)
                {
                    <tr>
                        <td>@tech.TechnicianName</td>
                        <td>@tech.AssignedDeviceCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
