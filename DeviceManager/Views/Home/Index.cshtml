@model DeviceManager.Models.Dashboard

<div class="container py-4">

    <h2 class="mb-4">Dashboard</h2>

    <!-- Device Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <h5>Total Devices</h5>
                    <h3>@Model.TotalDevices</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <h5>Active</h5>
                    <h3>@Model.ActiveDevices</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-danger shadow-sm">
                <div class="card-body">
                    <h5>Inactive</h5>
                    <h3>@Model.InactiveDevices</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Recently Added -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <strong>Recently Added Devices</strong>
        </div>
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Technician</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.RecentlyAdded)
                    {
                        <tr>
                            <td>@d.Name</td>
                            <td>@d.Type</td>
                            <td>@d.Status</td>
                            <td>@(d.Technician?.FullName ?? "Unassigned")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Devices Needing Attention -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning">
            <strong>Devices Needing Attention</strong>
        </div>
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Technician</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.AttentionNeeded)
                    {
                        <tr>
                            <td>@d.Name</td>
                            <td>@d.Type</td>
                            <td>@d.Status</td>
                            <td>@(d.Technician?.FullName ?? "Unassigned")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Technician Workload -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <strong>Technician Workload</strong>
        </div>
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Technician</th>
                        <th>Assigned Devices</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.TechnicianWorkload)
                    {
                        <tr>
                            <td>@t.TechnicianName</td>
                            <td>@t.AssignedDeviceCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
