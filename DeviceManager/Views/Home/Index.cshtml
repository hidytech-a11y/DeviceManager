@model DeviceManager.Models.Dashboard

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    .stat-card {
        border: none;
        border-radius: 12px;
        padding: 22px;
        color: white;
    }

    .stat-value {
        font-size: 34px;
        font-weight: 700;
        margin-top: 6px;
    }

    .section-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .list-group-item {
        padding: 14px 16px;
        border-radius: 8px;
        margin-bottom: 8px;
    }

    .bg-primary-gradient {
        background: linear-gradient(135deg, #0f4c75, #3282b8);
        color: #ffffff;
    }

</style>

<div class="container py-4">

    <h1 class="mb-4">Dashboard</h1>

    <div class="row g-3">

        <div class="col-md-3">
            <div class="stat-card bg-primary shadow-sm">
                <h6>Total Devices</h6>
                <div class="stat-value">@Model.TotalDevices</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card bg-success shadow-sm">
                <h6>Active</h6>
                <div class="stat-value">@Model.ActiveDevices</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card bg-danger shadow-sm">
                <h6>Inactive</h6>
                <div class="stat-value">@Model.InactiveDevices</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card bg-warning shadow-sm text-white">
                <h6>Unassigned</h6>
                <div class="stat-value">@Model.UnassignedDevices</div>
            </div>
        </div>

    </div>

    <hr class="my-4">

    <div class="row mt-3">

        <div class="col-md-6">
            <div class="card p-4 shadow-sm">
                <div class="section-title">Technician Workload</div>
                <canvas id="techChart"></canvas>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-4 shadow-sm">
                <div class="section-title">Recently Added</div>

                <ul class="list-group border-0">
                    @foreach (var d in Model.RecentlyAdded)
                    {
                        <li class="list-group-item shadow-sm d-flex justify-content-between align-items-center">
                            <span>
                                <i class="bi bi-tablet me-2"></i> @d.Name
                            </span>
                            <span class="badge bg-dark">@d.SerialNumber</span>
                        </li>
                    }
                </ul>

            </div>
        </div>

    </div>

    <div class="row mt-4">

        <div class="col-md-12">
            <div class="card p-4 shadow-sm">
                <div class="section-title">Devices Needing Attention</div>

                <ul class="list-group border-0">
                    @foreach (var d in Model.AttentionNeeded)
                    {
                        <li class="list-group-item shadow-sm d-flex justify-content-between align-items-center">
                            <span>
                                <i class="bi bi-exclamation-circle text-danger me-2"></i>
                                @d.Name
                            </span>

                            <span class="badge bg-secondary">
                                @(d.Technician?.FullName ?? "Unassigned")
                            </span>
                        </li>
                    }
                </ul>

            </div>
        </div>

    </div>

</div>

<script>
    new Chart(document.getElementById('techChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TechnicianWorkload.Select(x => x.TechnicianName))),
            datasets: [{
                label: 'Devices',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TechnicianWorkload.Select(x => x.AssignedDeviceCount))),
                backgroundColor: 'rgba(54, 162, 235, 0.6)'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            }
        }
    });
</script>
