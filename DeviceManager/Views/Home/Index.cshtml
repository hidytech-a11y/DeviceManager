@model DeviceManager.Models.Dashboard

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container py-4">

    <h2 class="mb-4">Dashboard</h2>

    <div class="row g-3">

        <div class="col-md-3">
            <div class="card text-white bg-primary p-3">
                <h5>Total Devices</h5>
                <h2>@Model.TotalDevices</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success p-3">
                <h5>Active</h5>
                <h2>@Model.ActiveDevices</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger p-3">
                <h5>Inactive</h5>
                <h2>@Model.InactiveDevices</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning p-3">
                <h5>Unassigned</h5>
                <h2>@Model.UnassignedDevices</h2>
            </div>
        </div>

    </div>

    <hr class="my-4">

    <div class="row">
        <div class="col-md-6">
            <div class="card p-3 shadow-sm">
                <h5>Devices by Type</h5>
                <canvas id="deviceTypeChart"></canvas>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3 shadow-sm">
                <h5>Assigned vs Unassigned</h5>
                <canvas id="assignedChart"></canvas>
            </div>
        </div>
    </div>

    <div class="row mt-4">

        <div class="col-md-6">
            <div class="card p-3 shadow-sm">
                <h5>Technician Workload</h5>
                <canvas id="techChart"></canvas>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3 shadow-sm">
                <h5>Recently Added</h5>

                <ul class="list-group">
                    @foreach (var d in Model.RecentlyAdded)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>
                                <i class="bi bi-tablet"></i> @d.Name
                            </span>
                            <span class="badge bg-secondary">@d.SerialNumber</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

    </div>

    <div class="row mt-4">

        <div class="col-md-12">
            <div class="card p-3 shadow-sm">
                <h5>Devices Needing Attention</h5>

                <ul class="list-group">
                    @foreach (var d in Model.AttentionNeeded)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>
                                <i class="bi bi-exclamation-circle text-danger"></i>
                                @d.Name
                            </span>

                            <span class="badge bg-dark">
                                @(d.Technician?.FullName ?? "Unassigned")
                            </span>
                        </li>
                    }
                </ul>

            </div>
        </div>

    </div>

</div>

<script>
    // Devices By Type
    new Chart(document.getElementById('deviceTypeChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DevicesByType.Select(x => x.Label))),
            datasets: [{
                label: 'Devices',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DevicesByType.Select(x => x.Count)))
            }]
        }
    });

    // Assigned vs Unassigned
    new Chart(document.getElementById('assignedChart'), {
        type: 'pie',
        data: {
            labels: ['Assigned', 'Unassigned'],
            datasets: [{
                data: [@Model.AssignedDevices, @Model.UnassignedDevices]
            }]
        }
    });

    // Technician Workload
    new Chart(document.getElementById('techChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TechnicianWorkload.Select(x => x.TechnicianName))),
            datasets: [{
                label: 'Devices',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TechnicianWorkload.Select(x => x.AssignedDeviceCount)))
            }]
        }
    });
</script>
