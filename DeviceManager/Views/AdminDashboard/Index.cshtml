@model DeviceManager.Models.AdminDashboardViewModel

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Admin Dashboard</h2>

        <form asp-controller="AdminDashboard"
              asp-action="ToggleOverride"
              method="post">
            @Html.AntiForgeryToken()

            <button class="btn btn-danger">
                Toggle Emergency Override
            </button>
        </form>
    </div>

    @if (ViewBag.AdminOverrideEnabled == true)
    {
        <div class="alert alert-danger">
            Admin emergency override is ACTIVE.
            Normal restrictions are bypassed.
        </div>
    }

    <div class="row g-4 mt-3">

        <div class="col-md-3">
            <div class="card border shadow-sm text-center p-3">
                <h4 class="fw-bold">@Model.UserCount</h4>
                <p class="text-muted">Users</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border shadow-sm text-center p-3">
                <h4 class="fw-bold">@Model.DeviceCount</h4>
                <p class="text-muted">Devices</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border shadow-sm text-center p-3">
                <h4 class="fw-bold">@Model.TechnicianCount</h4>
                <p class="text-muted">Technicians</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border shadow-sm text-center p-3">
                <h4 class="fw-bold">@Model.ManagerCount</h4>
                <p class="text-muted">Managers</p>
            </div>
        </div>

    </div>

    <hr class="my-4" />

    <div class="d-flex gap-3">
        <a asp-controller="Users"
           asp-action="Index"
           class="btn btn-primary">
            Manage Roles
        </a>
        @* <a asp-controller="Account"
           asp-action="Register"
           class="btn btn-primary">
            Manage Users *@
        </a>
    </div>

</div>
