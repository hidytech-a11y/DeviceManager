@model DeviceManager.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: #f3f4f6;
        font-family: Arial, sans-serif;
    }

    .login-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .login-box {
        width: 380px;
        background: white;
        border-radius: 12px;
        padding: 35px 30px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

        .login-box h2 {
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }

        .login-box label {
            font-weight: 500;
            margin-bottom: 5px;
        }

        .login-box input {
            border-radius: 8px;
        }

    .btn-primary, .btn-success {
        width: 100%;
        padding: 10px;
        font-weight: 600;
        border-radius: 8px;
        margin-top: 5px;
    }

    .small-link {
        margin-top: 15px;
        text-align: center;
        font-size: 14px;
    }
</style>

<div class="login-wrapper">
    <div class="login-box">

        <h2>Welcome Back</h2>

        <form asp-action="Index" method="post" novalidate>
            @Html.AntiForgeryToken()

            <input asp-for="ReturnUrl" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-success">Log in</button>

           @*  <a asp-action="Register" class="btn btn-primary">Register</a> *@
        </form>

        <div class="small-link">
            <span>Forgot your password?</span>
            <a href="#">Reset</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
