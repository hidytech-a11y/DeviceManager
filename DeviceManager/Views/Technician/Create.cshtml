@model DeviceManager.Models.Technician

<div class="container py-5">
    <h2>Add Technician</h2>
    <p class="text-muted">Enter technician details below.</p>

    <form asp-action="Create" class="mt-4">

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone</label>
            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
        </div>

        <div class="mb-3">
            <label asp-for="Expertise" class="form-label">Expertise</label>
            <input asp-for="Expertise" class="form-control" placeholder="e.g. Laptop repairs" />
        </div>

        <button type="submit" class="btn btn-success">
            Save Technician
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Cancel
        </a>
    </form>
</div>
