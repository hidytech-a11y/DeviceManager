@model DeviceManager.Models.Technician

<div class="container py-5">
    <h2>Add Technician</h2>
    <p class="text-muted">Enter technician details below.</p>

    <form asp-action="Create" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Expertise" class="form-label"></label>
            <input asp-for="Expertise" class="form-control" />
            <span asp-validation-for="Expertise" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdentityUserId" class="form-label">Login User</label>
            <select asp-for="IdentityUserId"
                    asp-items="ViewBag.Users"
                    class="form-select">
                <option value="">-- Unlinked --</option>
            </select>
            <span asp-validation-for="IdentityUserId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">
            Save Technician
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
