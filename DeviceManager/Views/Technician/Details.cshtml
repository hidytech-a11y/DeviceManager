@model DeviceManager.Models.Technician

<div class="container mt-5">
    <div class="card shadow-lg border-2">
        <div class="card-header bg-gradient-info text-black-50 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-person-badge"></i> Technician Details
            </h3>
            <span class="badge bg-primary">Active</span>
        </div>

        <div class="card-body">

            <div class="mb-3">
                <strong>Full Name:</strong>
                <p class="text-muted">@Model.FullName</p>
            </div>

            <div class="mb-3">
                <strong>Phone:</strong>
                <p class="text-muted">@Model.Phone</p>
            </div>

            <div class="mb-3">
                <strong>Expertise:</strong>
                <p class="text-muted">@Model.Expertise</p>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>

        </div>
    </div>
</div>
