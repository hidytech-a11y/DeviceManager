@model IEnumerable<DeviceManager.Models.Technician>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Technicians</h2> <a asp-action="Create" class="btn btn-primary">Add Technician</a> 
    </div>
</div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Phone</th>
                <th>Expertise</th>
                <th>Login</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tech in Model)
            {
                <tr>
                    <td>@tech.FullName</td>
                    <td>@tech.Phone</td>
                    <td>@tech.Expertise</td>
                    <td>
                        @(string.IsNullOrEmpty(tech.IdentityUserId) ? "Unlinked" : "Linked")
                    </td>
                    <td class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@tech.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@tech.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@tech.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
