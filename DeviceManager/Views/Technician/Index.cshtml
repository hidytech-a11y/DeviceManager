@model IEnumerable<DeviceManager.Models.Technician>



<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Technicians</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill me-1"></i> Add Technician
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Expertise</th>
                            <th style="min-width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.FullName</td>
                                <td>@t.Phone</td>
                                <td>@t.Expertise</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-info btn-sm d-flex align-items-center">
                                            <i class="bi bi-info-circle"></i></a>
                                        <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-primary btn-sm d-flex align-items-center">
                                            <i class="bi bi-pencil me-1"></i></a>
                                        <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm d-flex align-items-center">
                                            <i class="bi bi-trash me-1"></i> </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
