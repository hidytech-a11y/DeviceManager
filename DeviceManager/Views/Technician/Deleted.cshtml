@model List<DeviceManager.Models.Technician>

<div class="container py-5"> <div class="card shadow-sm border-2 p-4">
        <div class="card-header mb-4">
            <h3>
                <i class="bi bi-person-dash-fill"></i>
                Deleted Technicians
            </h3>
        </div>


        @if (!Model.Any())
        {
            <p>No deleted technicians.</p>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Phone</th>
                        <th>Expertise</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tech in Model)
                    {
                        <tr>
                            <td>@tech.FullName</td>
                            <td>@tech.Phone</td>
                            <td>@tech.Expertise</td>
                            <td>
                                <form asp-action="Restore"
                                      asp-route-id="@tech.Id"
                                      method="post">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                        Restore
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <a asp-action="Index" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i>
            Back
        </a>

    </div>
</div>
