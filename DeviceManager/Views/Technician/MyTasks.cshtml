@model IEnumerable<DeviceManager.Models.Device>

@{
    ViewData["Title"] = "My Tasks";
}

        <div class="container py-5">
            <h2>My Assigned Devices</h2>

                @if (!Model.Any())
                {
                    <div class="alert alert-info mt-3">
                        No devices assigned.
                    </div>
                }
                else
                {
                    <table class="table table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Serial Number</th>
                                <th>Type</th>
                                <th>Work Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model)
                            {
                                <tr>
                                    <td>@d.Name</td>
                                    <td>@d.SerialNumber</td>
                                    <td>@d.DeviceType?.Name</td>
                                    <td>@d.WorkStatus</td>
                                    <td>
                                        @if (d.WorkStatus == "Assigned")
                                        {
                                            <form asp-controller="Devices"
                                                  asp-action="UpdateStatus"
                                                  method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@d.Id" />
                                                <input type="hidden" name="status" value="InProgress" />
                                                <button class="btn btn-primary btn-sm">
                                                    Start
                                                </button>
                                            </form>
                                        }
                                        else if (d.WorkStatus == "InProgress")
                                        {
                                            <form asp-controller="Devices"
                                                  asp-action="UpdateStatus"
                                                  method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@d.Id" />
                                                <input type="hidden" name="status" value="Done" />
                                                <button class="btn btn-success btn-sm">
                                                    Mark Done
                                                </button>
                                            </form>
                                        }
                                        else if (d.WorkStatus == "Done" && !d.IsApprovedByManager)
                                        {
                                            <span class="text-warning">Waiting approval</span>
                                        }
                                        else if (d.IsApprovedByManager)
                                        {
                                            <span class="text-success">Approved</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Back</a>
        </div>


