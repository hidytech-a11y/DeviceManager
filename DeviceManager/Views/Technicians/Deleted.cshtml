@model List<DeviceManager.Models.Technician>

<h4>Deleted Technicians</h4>

@if (!Model.Any())
{
    <p>No deleted technicians.</p>
}
else
{
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Deleted At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tech in Model)
            {
                <tr>
                    <td>@tech.FullName</td>
                    <td>@tech.DeletedAt?.ToLocalTime()</td>
                    <td>
                        <a asp-controller="Technicians"
                           asp-action="RestoreConfirm"
                           asp-route-id="@tech.Id"
                           class="btn btn-success btn-sm">
                            Restore
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
