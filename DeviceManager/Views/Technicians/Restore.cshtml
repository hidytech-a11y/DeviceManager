@model DeviceManager.Models.RestoreTechnicianViewModel

<h4>Restore Technician</h4>

<div class="card p-3">
    <form asp-action="Restore" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="TechnicianId" />

        <p>
            Technician:
            <strong>@Model.FullName</strong>
        </p>

        <hr />

        <label>Assign Devices</label>
        <select asp-for="SelectedDeviceIds"
                asp-items="@(new MultiSelectList(Model.AvailableDevices, "Id", "Name"))"
                class="form-control"
                multiple
                size="8">
        </select>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">
                Restore Technician
            </button>

            <a asp-action="Deleted"
               class="btn btn-secondary">
                Cancel
            </a>
        </div>
    </form>
</div>
