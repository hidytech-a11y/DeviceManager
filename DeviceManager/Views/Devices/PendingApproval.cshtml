@model List<DeviceManager.Models.Device>

    @{
    ViewData["Title"] = "Pending Approvals";
}

<h2>Pending Device Approvals</h2>

@if (!Model.Any())
{
    <p>No completed tasks waiting approval.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Device</th>
                <th>Serial</th>
                <th>Technician</th>
                <th>Completed At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.SerialNumber</td>
                    <td>@d.Technician?.FullName</td>
                    <td>@d.CompletedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form asp-action="Approve"
                              asp-controller="Devices"
                              method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@d.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                Approve
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

