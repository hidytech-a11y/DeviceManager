@model DeviceManager.Models.Device

@{
    ViewData["Title"] = "Device Details";
}


<div class="container py-4">
   

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Device Details</h3>
        <div class="gap-3">
            <a asp-controller="Audit" asp-action="Device" asp-route-deviceId="@Model.Id" class="btn btn-secondary btn-sm">
                View Audit Trail
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                Back
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">

            <div class="row g-3">

                <div class="col-md-6">
                    <div class="text-muted small">Name</div>
                    <div class="fw-semibold">@Model.Name</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Serial Number</div>
                    <div class="fw-semibold">@Model.SerialNumber</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Device Type</div>
                    <div class="fw-semibold">
                        @Model.DeviceType?.Name
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Status</div>
                    <div>
                        @if (Model.Status == "Active")
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Assigned Technician</div>
                    <div class="fw-semibold">
                        @(Model.Technician?.FullName ?? "Unassigned")
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Work Status</div>
                    <div class="fw-semibold">
                        @(Model.WorkStatus ?? "Not started")
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Manager Approval</div>
                    <div>
                        @if (Model.IsApprovedByManager)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </div>
                </div>

                @if (Model.CompletedAt != null)
                {
                    <div class="col-md-6">
                        <div class="text-muted small">Completed At</div>
                        <div class="fw-semibold">
                            @Model.CompletedAt?.ToString("yyyy-MM-dd HH:mm")
                        </div>
                    </div>
                }

            </div>

            <hr class="my-4" />

            <div class="d-flex gap-2">

                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-primary btn-sm">
                        Edit
                    </a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete"
                       asp-route-id="@Model.Id"
                       class="btn btn-danger btn-sm">
                        Delete
                    </a>
                }

            </div>

        </div>
    </div>


</div>