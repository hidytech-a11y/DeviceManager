@model DeviceManager.Models.Device

<div class="container py-5">
    <h2>Device Details</h2>

    <dl class="row mt-3">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Serial Number</dt>
        <dd class="col-sm-9">@Model.SerialNumber</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.DeviceType?.Name</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Work Status</dt>
        <dd class="col-sm-9">@Model.WorkStatus</dd>

        <dt class="col-sm-3">Technician</dt>
        <dd class="col-sm-9">@Model.Technician?.FullName</dd>

        <dt class="col-sm-3">Manager Approval</dt>
        <dd class="col-sm-9">
            @(Model.IsApprovedByManager ? "Approved" : "Pending")
        </dd>

        @if (Model.IsApprovedByManager)
        {
            <dt class="col-sm-3">Approved At</dt>
            <dd class="col-sm-9">@Model.ApprovedAt</dd>
        }
    </dl>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
