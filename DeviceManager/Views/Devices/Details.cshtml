@model DeviceManager.Models.Device

<div class="container mt-5">
    <div class="card shadow-lg border-2">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Device Details</h3>
            <span class="badge bg-light text-dark">@Model.Status</span>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Type:</strong> @Model.Type</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Serial Number:</strong> @Model.SerialNumber</p>
            <p><strong>Technician:</strong> @Model.Technician?.FullName</p>

            <div class="d-flex gap-2 mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
