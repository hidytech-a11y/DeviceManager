@model IEnumerable<DeviceManager.Models.Device>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Devices</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add Device
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Serial</th>
                            <th>Status</th>
                            <th>Technician</th>
                            <th style="min-width: 220px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.Name</td>
                                <td>@d.Type</td>
                                <td>@d.SerialNumber</td>
                                <td>
                                    @if (d.Status == "Active")
                                    {
                                        <span class="badge bg-success">@d.Status</span>
                                    }
                                    else if (d.Status == "Inactive")
                                    {
                                        <span class="badge bg-warning text-dark">@d.Status</span>
                                    }
                                </td>
                                <td>@(d.Technician != null ? d.Technician.FullName : "Unassigned")</td>

                                <td>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-action="Details" asp-route-id="@d.Id"
                                           class="btn btn-info btn-sm d-flex align-items-center">
                                            <i class="bi bi-eye me-1"></i> Details
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@d.Id"
                                           class="btn btn-primary btn-sm d-flex align-items-center">
                                            <i class="bi bi-pencil me-1"></i> Edit
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@d.Id"
                                           class="btn btn-danger btn-sm d-flex align-items-center">
                                            <i class="bi bi-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
