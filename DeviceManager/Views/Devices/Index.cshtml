@model IEnumerable<DeviceManager.Models.Device>

@{
    ViewData["Title"] = "Devices";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Devices</h2>
        <a asp-action="Create" class="btn btn-success">Add Device</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                    foreach (var d in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@d.Name</td>
                            <td>@d.Type</td>
                            <td>
                                @if (d.Status == "Active")
                                {
                                    <span class="badge bg-success">@d.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@d.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
