@model DeviceManager.Models.ReportsViewModel

@{
    ViewData["Title"] = "Reports";
}

<div class="container py-4">

    <h3 class="mb-4">System Report</h3>

    <div class="row g-3 mb-4">

        <div class="col-md-3">
            <div class="card p-3">
                <div class="text-muted small">Total Devices</div>
                <div class="fs-4 fw-semibold">@Model.TotalDevices</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3">
                <div class="text-muted small">Active</div>
                <div class="fs-4 text-success">@Model.ActiveDevices</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3">
                <div class="text-muted small">Inactive</div>
                <div class="fs-4 text-danger">@Model.InactiveDevices</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3">
                <div class="text-muted small">Pending Approval</div>
                <div class="fs-4 text-warning">@Model.PendingApprovals</div>
            </div>
        </div>

    </div>

    <div class="card mb-4">
        <div class="card-body p-0">
            <table class="table table-sm mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Technician</th>
                        <th>Total</th>
                        <th>In Progress</th>
                        <th>Completed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.TechnicianStats)
                    {
                        <tr>
                            <td>@t.TechnicianName</td>
                            <td>@t.TotalAssigned</td>
                            <td>@t.InProgress</td>
                            <td>@t.Completed</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
