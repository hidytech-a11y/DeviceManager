@model List<AuditLog>

@{
    ViewData["Title"] = "Audit Trail";
}

@{
    var deviceId = Model.FirstOrDefault()?.DeviceId;
}

<div class="container mt-4">


    <h4 class="mb-3">Audit Trail</h4>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No audit records found.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">

                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Action</th>
                            <th>Old Value</th>
                            <th>New Value</th>
                            <th>User</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.PerformedAt.ToLocalTime()</td>
                                <td>@log.Action</td>
                                <td>@(log.OldValue ?? "-")</td>
                                <td>@(log.NewValue ?? "-")</td>
                                <td>@log.PerformedBy</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    } 
    <div>

    <a asp-controller="Devices" asp-action="Details" asp-route-id="@deviceId" class="btn btn-secondary btn-sm mt-3 ">
        Back to Device
    </a>

